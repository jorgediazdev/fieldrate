<% layout("layouts/boilerplate") %>
<div id="map" style="width: 100%; height: 500px"></div>
<h1>All Fields</h1>
<% for (let field of fields) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
            <% if (field.images[0]) { %>
                <img src="<%= field.images[0].url %>" alt="" class="img-fluid">
            <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= field.name %></h5>
                    <p class="card-text"><%= field.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= field.location %></small>
                    </p>
                    <a class="btn btn-primary" href="/fields/<%= field._id %>">Details</a>
                </div>
            </div>
        </div>
    </div>
<% } %>

<script>
    const mapboxToken = "<%- process.env.MAPBOX_TOKEN %>"
    // EJS syntax error does not affect the performance of the application.
    const fields = { features: <%- JSON.stringify(fields) %> }
</script>
<script src="/clusterMap.js"></script>